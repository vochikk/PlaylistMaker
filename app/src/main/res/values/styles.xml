<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:paddingVertical">@dimen/padding_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="IconStyle">
        <item name="android:paddingVertical">@dimen/padding_16</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="TextLibraryStyle" parent="TextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/box_stroke_selector</item>
        <item name="hintTextColor">@color/box_stroke_selector</item>
    </style>
</resources>